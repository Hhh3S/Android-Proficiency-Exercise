<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HomeTabLayoutStyle" parent="Widget.Design.TabLayout">

        <item name="tabTextAppearance">@style/MyTabTextStyle</item>

        <!--tab指示标的颜色-->
        <item name="tabIndicatorColor">@color/colorAccent</item>
        <!--tab 指示标的高度-->
        <item name="tabIndicatorHeight">2dp</item>
        <!--选中的tab的字体的颜色-->
        <item name="tabSelectedTextColor">#FFFFFFFF</item>


    </style>

    <style name="MyTabTextStyle" parent="TextAppearance.Design.Tab">
        <!--Tab字体的大小-->
        <item name="android:textSize">14sp</item>
        <!--Tab字体的默认的颜色-->
        <item name="android:textColor">#B3FFFFFF</item>
        <!--Tab字体是否为大写-->
        <item name="textAllCaps">false</item>
    </style>

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:text="@string/load_end"
    android:textColor="@color/textColorLoadMore"

    <style name="LoadMoreTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/textColorLoadMore</item>
        <item name="android:textSize">14sp</item>
    </style>


</resources>
